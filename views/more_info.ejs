<%- include("partials/header.ejs") %>
<div class="row d-flex justify-content-center">
    <div class="col-8">
        <h1 class="display-6 pb-3"><%= blog.name %></h1>
        <div class="container img-thumbnail p-3">
            <div class="d-flex justify-content-center">
                <img src="<%= blog.image %>" alt="Blog Image" class="img-fluid">
            </div>
            <div class="container p-5">
                <p><%= blog.time %></p>
                <p><%= blog.description %></p>
                <div class="d-flex pt-2">
                    <form action="/blogs/<%= blog._id %>/edit">
                        <button class="btn btn-outline-warning">Update</button>
                    </form>
                    <form action="/blogs/<%= blog._id%>?_method=DELETE"  method="post" >
                        <button class="btn btn-outline-danger px-3 ms-5">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>