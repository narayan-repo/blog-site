<%- include("partials/header.ejs") %>
<div class="row d-flex justify-content-center">
    <div class="col-8">
        <h1 class="display-3 pb-3">Blog Site</h1>
        <div class="container img-thumbnail">
            <% blogs.forEach((blog)=>{ %>
                <div class="row d-flex justify-content-center p-3 pb-0">
                    <div class="col-4">
                        <img src="<%= blog.image %>" alt="Blog Image" class="img-fluid">
                    </div>
                    <div class="col-8 align-content-center">
                        <h6 class="lead"><%= blog.name %></h6>
                        <p><%= blog.time %></p>
                        <p><em><%= blog.description %></em></p>
                        <a href="/blogs/<%= blog._id%>" class="btn btn-outline-primary">Read More</a>
                    </div>
                    <hr class="mt-3">
                </div>
            <% }) %>
        </div>
    </div>
</div>

<%- include("partials/footer.ejs") %>